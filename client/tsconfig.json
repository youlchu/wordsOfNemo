{
  "compilerOptions": {
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["ES2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "./tsconfig.base", // expo/tsconfig.base yerine proje kökündeki dosya kullanıldı
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
